{
    "name": "Theme Explorer",
    "description": "Extract CSS variables from webpages",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/js/content.js"]
        }
    ],
    "action": {
        "default_popup": "src/html/popup.html"
    },
    "icons": {
        "16": "assets/icon/16.png",
        "32": "assets/icon/32.png",
        "48": "assets/icon/48.png",
        "128": "assets/icon/128.png"
    }
}